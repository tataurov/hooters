.girls-list {
  list-style: none; text-align: justify;
  .girls-list-item {
    display: inline-block; font-size: 17px; margin: 0 15px 7px; vertical-align: top;
    .tn-link { font-style: italic; }
    .count { font-size: 12px; position: relative; bottom: -4px; color: #7b7b7b; }
  }
}

@media screen and (max-width: 500px) {
  .girls-list {
    text-align: center;
  }
}
