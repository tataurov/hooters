.eighteen-popup {
  position: fixed; padding: 20px; box-sizing: border-box; background: #fff;
  box-shadow: 0 0 10px rgba(0, 0, 0, .55); z-index: 100; top: 100px; left: 50%;
  margin-left: -150px; width: 300px; border-radius: 8px; display: none;
  transition: all .3s linear;
  &.active { display: block;}
  .text { font-size: 27px; text-align: center; padding: 5px 0 25px; line-height: 1.2; font-family: 'Lobster'; }
  .submit-row {
    overflow: hidden;
  }
}
