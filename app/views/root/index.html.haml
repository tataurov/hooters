.main-content-wrapper
  .main-content.base-width
    .container-16.clearfix
      .grid-16
        %h1 Last uploads
      .gallery.grid-16
        %ul.gallery-list
          - @girls.each do |item|
            - next unless item.gallery_item_image.present?
            %li.gallery-item
              .gallery-item-top
                %a.fancybox.img-cell{href: item.gallery_item_image.url(:main_image), rel: 'girls'}
                  %img{src: item.gallery_item_image.url(:small)}
              .gallery-item-bottom
                .item-description
                  - if item.girl.present?
                    %a{href: girl_path(item.girl.id_with_slug)}= item.title
                  - else
                    = item.title

          - 5.times do
            %li.gallery-item.dummy


